      }

      /* Form styling */
      .contact-form {
        max-width: 600px;
        margin: 0 auto;
        background-color: white;
        padding: 2.5rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
      }

      .form-group {
        margin-bottom: 1.5rem;
      }

      .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: var(--color-text);
        font-weight: bold;
        font-size: 1.1rem;
      }

      .form-input {
        width: 100%;
        padding: 1rem;
        background-color: var(--color-light-bg);
        border: 1px solid rgba(0, 0, 0, 0.1);
        color: var(--color-text);
        font-family: 'Space Mono', monospace;
        font-size: 1rem;
      }

      .form-textarea {
        width: 100%;
        padding: 1rem;
        background-color: var(--color-light-bg);
        border: 1px solid rgba(0, 0, 0, 0.1);
        color: var(--color-text);
        font-family: 'Space Mono', monospace;
        font-size: 1rem;
        min-height: 150px;
      }

