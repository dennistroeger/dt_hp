---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Note from '~/components/widgets/Note.astro';
import Button from '~/components/ui/Button.astro';

import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { getCanonical } from '~/utils/permalinks';
import { createWebsiteJsonLd } from '~/utils/jsonld';

const metadata = {
  title: 'Unfix Yourself - Dennis Tröger',
  description:
    'Skip the gurus and decode the chaos. Raw, no-nonsense insights for entrepreneurs and career switchers who want to live authentically.',
  keywords:
    'unfix yourself, anti-self-help, entrepreneurship, career change, limiting beliefs, authentic living, resilience, mindset, radical mediocrity',
  author: 'Dennis Tröger',
  ogTitle: "Unfix Yourself - Life's Too Short for Fake Fixes",
  ogDescription:
    "I'm Dennis—a biologist turned SaaS founder helping entrepreneurs and career switchers ditch limiting beliefs and build authentic lives. No fluff, just real lessons from my falls and fights.",
  ogImage: 'assets/images/feature_images/image_11.png',
  twitterCard: 'summary_large_image',
  twitterTitle: "Unfix Yourself - Life's Too Short for Fake Fixes",
  twitterDescription:
    "I'm Dennis—a biologist turned SaaS founder helping entrepreneurs and career switchers ditch limiting beliefs and build authentic lives. No fluff, just real lessons from my falls and fights.",
  twitterImage: 'assets/images/feature_images/image_11.png',
  ignoreTitleTemplate: true,
};

// Create JSON-LD structured data for the website
const url = getCanonical(Astro.url.pathname);
const jsonLd = createWebsiteJsonLd(url.toString(), 'Dennis Tröger - Unfix Yourself', metadata.description);
---

<Layout metadata={metadata}>
  <!-- Add JSON-LD structured data -->
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <!-- Hero Widget ******************* -->

  <Hero2
    actions={[
      {
        variant: 'primary',
        text: 'Unfix Your Life',
        href: '/blog',
        target: '_blank',
        icon: 'tabler:arrow-right',
      },
    ]}
    image={{ src: '~/assets/images/Dennis Troeger.png', alt: 'Dennis Tröger' }}
  >
    <Fragment slot="title">
      Unfix <span class="text-accent dark:text-accent highlight"> Yourself</span>—Life's Too Short for Fake Fixes
    </Fragment>

    <Fragment slot="subtitle">
      <span>
        Stuck, scattered, or just fed up with the grind? <br />
        <br /> I'm Dennis—a biologist turned SaaS founder who spent 20 years chasing "perfect" until I saw the self-help
        game for what it is: a pile of noise. Now I help entrepreneurs and career switchers like you drop the lies—"you're
        not enough," "work harder"—and decode the mess of mindset, money, and growth. <br /><br />
        No magic tricks, just dark, honest lessons from my falls and fights—so you can stop tweaking and start living before
        it's over.
        <br /><br />
        Ready to ditch the guru nonsense?
      </span>
    </Fragment>
  </Hero2>
  <!-- Note Widget ******************* -->

  <Note title="My Philosophy">
    <p>
      Life's a messy numbers game. Success isn't about perfect plans or constant fixing—it's about resilience,
      alignment, and action. Decode the chaos, live your way—skip the gurus.
    </p>
  </Note>

  <!-- Blog Roll ******************* -->

  <BlogLatestPosts
    id="blog"
    title="Raw Insights Without the Fluff"
    information={`No 3-step programs or quick fixes here. Just honest takes on ditching limiting beliefs, aligning with your inner nature, and building a life or business that doesn't drain you—profit included, hustle not required.`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>

  <div class="flex justify-center mb-12 mt-12">
    <Button href="/blog" class="transition-transform duration-300 hover:scale-105">Read Raw Truths</Button>
  </div>
</Layout>
