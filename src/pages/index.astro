---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Note from '~/components/widgets/Note.astro';
import Button from '~/components/ui/Button.astro';

import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Dennis Decodes Systems - Decoding Complex Systems into Simple Solutions',
  description: 'Dennis Decodes Systems - Decoding Complex Systems into Simple Solutions',
  keywords: 'personal development, AI, wealth',
  author: 'Dennis Tröger',
  ogTitle: 'I decode systems',
  ogDescription: 'Dennis Decodes Systems - Decoding Complex Systems into Simple Solutions',
  ogImage: 'assets/images/feature_images/image_11.png',
  twitterCard: 'summary_large_image',
  twitterTitle: 'I decode systems',
  twitterDescription: 'Dennis Decodes Systems - Decoding Complex Systems into Simple Solutions',
  twitterImage: 'assets/images/feature_images/image_11.png',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero2
    actions={[
      {
        variant: 'primary',
        text: 'Start Exploring',
        href: '/blog',
        target: '_blank',
        icon: 'tabler:arrow-right',
      },
    ]}
    image={{ src: '~/assets/images/Dennis Troeger.png', alt: 'Dennis Tröger' }}
  >
    <Fragment slot="title">
      I <span class="text-accent dark:text-white highlight"> decode </span> systems.
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Hey, I'm Dennis—Ex-Molecular Biologist, SaaS Founder, Polymath Explorer.<br /><br />
        I decode systems—mindsets, money, and personal growth for you, AI for businesses at Histack—to unlock clarity, purpose,
        and profit.<br /><br />
        No fluff, just real lessons from my wins and wrecks to help you cut through chaos and thrive.
      </span>
      <span class="block mb-0.5 sm:hidden font-bold">
        Hey, I'm Dennis—Ex-Molecular Biologist, SaaS Founder, Polymath Explorer.<br /><br />
        I decode systems—mindsets, money, and personal growth for you, AI for businesses at Histack—to unlock clarity, purpose,
        and profit.<br /><br />
        No fluff, just real lessons from my wins and wrecks to help you cut through chaos and thrive. s</span
      >
    </Fragment>
  </Hero2>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Blog Roll ******************* -->

  <BlogLatestPosts />

  <div class="flex justify-center mb-12">
    <Button href="/blog" class="transition-transform duration-300 hover:scale-105">Read Blog</Button>
  </div>
</Layout>
